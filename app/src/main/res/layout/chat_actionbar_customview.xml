<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/ColorPrimary"
    android:layout_height="match_parent">
    <com.example.pankaj.mychatapp.CustomUI.RoundedImageView
        android:id="@+id/chatUserImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/nouser"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/chatUserImage">

        <TextView   android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/txtUserName"
            android:text="pankaj dhami"
            android:textColor="#ffffffff"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"

        ></TextView>

        <TextView   android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/txtOnlineStatus"
            android:text="online"
            android:textColor="#ffffffff"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"


            ></TextView>
    </LinearLayout>
</RelativeLayout>
